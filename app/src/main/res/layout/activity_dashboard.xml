            android:layout_marginRight="5dp"
            app:srcCompat="@drawable/heart_light" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:fontFamily="@font/sukhumvit_medium"
            android:text="="
