<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".launcher">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:hapticFeedbackEnabled="false"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/impressed_logo_thai" />

        <EditText
            android:id="@+id/phone_input"
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/edittext_border"
            android:ems="10"
            android:gravity="center"
            android:inputType="phone"
            android:textColor="@color/colorLetterlight"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logo" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/letter1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/colorLetterlight"
                android:textSize="50dp" />

            <TextView
                android:id="@+id/letter2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/colorLetterlight"
                android:textSize="50dp" />

            <TextView
                android:id="@+id/letter3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/colorLetterlight"
                android:textSize="50dp" />


        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/letter4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:text="4"
            android:textColor="@color/colorLetterlight"
            android:textSize="50dp" />

        <TextView
            android:id="@+id/letter5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:text="5"
            android:textColor="@color/colorLetterlight"
            android:textSize="50dp" />

        <TextView
            android:id="@+id/letter6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:text="6"
            android:textColor="@color/colorLetterlight"
            android:textSize="50dp" />



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/letter7"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:text="7"
            android:textColor="@color/colorLetterlight"
            android:textSize="50dp"
           />

        <TextView
            android:id="@+id/letter8"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:text="8"
            android:textColor="@color/colorLetterlight"
            android:textSize="50dp" />

        <TextView
            android:id="@+id/letter9"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:text="9"
            android:textColor="@color/colorLetterlight"
            android:textSize="50dp"
           />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/letter0"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/colorLetterlight"
            android:textSize="50dp" />

        <TextView
            android:id="@+id/del"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:text="DEL"
            android:textColor="@color/colorLetterlight"
            android:textSize="30dp"
  />

        <ImageButton
            android:id="@+id/btn_enter"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_btn"
            app:srcCompat="@drawable/btn_enter" />

    </LinearLayout>




    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>