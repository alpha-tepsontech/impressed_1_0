<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">


    <TextView
    android:id="@+id/promo_del_confirm"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fontFamily="@font/sukhumvit_medium"
    android:gravity="center"
    android:text="ลบ promotion นี้" />


    <TextView
        android:id="@+id/promo_del_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sukhumvit_medium"
        android:gravity="center"
        android:text="promoName" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/del_conf_CancelBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/dialog_btn"
            android:text="ยกเลิก"
             />

        <Button
            android:id="@+id/del_conf_DelBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/dialog_btn"
            android:text="ลบ"
             />
    </LinearLayout>

</LinearLayout>