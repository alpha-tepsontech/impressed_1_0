<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linearLayout13"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="center_vertical|end"
        android:orientation="horizontal"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/tx_record"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/sukhumvit_bold"
            android:gravity="center"
            android:textColor="@color/colorLetterDark" />

        <TextView
            android:id="@+id/unit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:fontFamily="@font/sukhumvit_bold"
            android:gravity="center"
            android:text="บาท : "
            android:textColor="@color/colorLetterDark" />

        <TextView
            android:id="@+id/tx_day"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:fontFamily="@font/sukhumvit_bold"
            android:gravity="center"
            android:textColor="@color/colorLetterDark" />

        <TextView
            android:id="@+id/separator"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:fontFamily="@font/sukhumvit_bold"
            android:gravity="center"
            android:text="/"
            android:textColor="@color/colorLetterDark" />

        <TextView
            android:id="@+id/tx_month"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:fontFamily="@font/sukhumvit_bold"
            android:gravity="center"
            android:textColor="@color/colorLetterDark" />

        <TextView
            android:id="@+id/separator"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:fontFamily="@font/sukhumvit_bold"
            android:gravity="center"
            android:text="/"
            android:textColor="@color/colorLetterDark" />

        <TextView
            android:id="@+id/tx_year"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/sukhumvit_bold"
            android:gravity="center"
            android:textColor="@color/colorLetterDark" />

        <TextView
            android:id="@+id/tx_hour"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:fontFamily="@font/sukhumvit_bold"
            android:gravity="center"
            android:textColor="@color/colorLetterDark" />

        <TextView
            android:id="@+id/separator_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:fontFamily="@font/sukhumvit_bold"
            android:gravity="center"
            android:text=":"
            android:textColor="@color/colorLetterDark" />

        <TextView
            android:id="@+id/tx_minute"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/sukhumvit_bold"
            android:gravity="center"
            android:textColor="@color/colorLetterDark" />


        <ImageButton
            android:id="@+id/tx_del"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="2dp"
            android:background="@color/fui_transparent"
            android:padding="2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/x_icon" />


    </LinearLayout>

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout13" />

</androidx.constraintlayout.widget.ConstraintLayout>