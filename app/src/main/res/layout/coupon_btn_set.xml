<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linearLayout13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/coupon_border"
            android:layout_marginRight="10dp"
            android:layout_weight="8"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/promoName_textview"
            android:fontFamily="@font/sukhumvit_bold"
            android:gravity="center"
            />
            <View
                android:id="@+id/v_line"
                android:layout_width="2dp"
                android:layout_height="15dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:background="@color/colorGray"/>
            <TextView
                android:id="@+id/coupon_life_display"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:fontFamily="@font/sukhumvit_bold"
                android:gravity="center"
                />
            <TextView
            android:id="@+id/coupon_life_unit"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
            android:fontFamily="@font/sukhumvit_bold"
            android:gravity="center"
            android:text="วัน"/>
            <View
                android:id="@+id/v_line_2"
                android:layout_width="2dp"
                android:layout_height="15dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:background="@color/colorGray"/>
            <TextView
                android:id="@+id/coupon_price_display"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:fontFamily="@font/sukhumvit_bold"
                android:gravity="center"
                />
            <TextView
            android:id="@+id/coupon_price_unit"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
            android:fontFamily="@font/sukhumvit_bold"
            android:gravity="center"
            android:text="บาท"/>
        </LinearLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2">

            <ImageButton
                android:id="@+id/heartButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/coupon_btn"
                android:paddingLeft="15dp"
                android:paddingTop="7dp"
                android:paddingRight="5dp"
                android:paddingBottom="7dp"
                android:scaleType="fitStart"
                android:src="@drawable/g_heart" />


            <TextView
                android:id="@+id/promoWorth_textview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/sukhumvit_bold"
                android:gravity="center|end"
                android:paddingLeft="30dp"
                android:paddingRight="15dp"
                android:text="##"
                android:textColor="@color/colorLetterlight" />


        </FrameLayout>

        <ImageButton
            android:id="@+id/promo_edit_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/coupon_btn"
            android:paddingLeft="5dp"
            android:paddingTop="7dp"
            android:paddingRight="5dp"
            android:paddingBottom="9dp"
            android:scaleType="fitCenter"
            android:src="@drawable/edit_light" />

        <ImageButton
            android:id="@+id/promo_del_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/coupon_btn"
            android:paddingLeft="5dp"
            android:paddingTop="7dp"
            android:paddingRight="5dp"
            android:paddingBottom="9dp"
            android:scaleType="fitCenter"
            android:src="@drawable/trash_icon" />


    </LinearLayout>

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout13" />

</androidx.constraintlayout.widget.ConstraintLayout>