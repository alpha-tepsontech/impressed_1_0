<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".customer">

    <TextView
        android:id="@+id/store_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:gravity="center_vertical"
        android:text="Store_name"
        android:textColor="@color/colorLetterDark"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@+id/store_name"
        app:layout_constraintTop_toBottomOf="@+id/store_name">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="รับ"
            android:textColor="@color/colorLetterDark" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/heart_light" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ทุกๆ"
            android:textColor="@color/colorLetterDark" />


        <TextView
            android:id="@+id/customer_heart_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="##"
            android:textColor="@color/colorLetterDark" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="บาท"
            android:textColor="@color/colorLetterDark" />

    </LinearLayout>


    <View
        android:id="@+id/input_view"
        android:layout_width="350dp"
        android:layout_height="604dp"
        android:background="@color/colorBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/input_view"
        app:layout_constraintTop_toTopOf="@+id/input_view"
        app:srcCompat="@drawable/logo_thai_light" />

    <TextView
        android:id="@+id/logged_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="customer_name"
        android:textColor="@color/colorLetterlight"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/input_view"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/logged_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="###-###-####"
        android:textColor="@color/colorLetterlight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/input_view"
        app:layout_constraintTop_toBottomOf="@+id/logged_name" />

    <LinearLayout
        android:id="@+id/linearLayout12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toStartOf="@+id/input_view"
        app:layout_constraintTop_toTopOf="@+id/input_view">

        <ImageView
            android:id="@+id/heart"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/heart" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x"
            android:textColor="@color/colorAccentbright"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/customer_heart_bank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="##"
            android:textColor="@color/colorAccentbright"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <Button
        android:id="@+id/log_out_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:text="Log out"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/input_view"
        app:layout_constraintStart_toStartOf="@+id/input_view" />
</androidx.constraintlayout.widget.ConstraintLayout>